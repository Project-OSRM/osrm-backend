{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "declaration": false,
    "outDir": "./features/support",
    "rootDir": "./features/support",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": false
  },
  "include": ["features/support/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
